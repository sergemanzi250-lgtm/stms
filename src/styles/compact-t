/* Print-specific styles for A4 timetables */
@media print {
  @page {
    size: A4;
    margin: 10mm;
  }

  /* Hide everything except the compact timetable when printing */
  body.print-mode #__next > *:not(#compact-timetable) {
    display: none !important;
  }

  /* Ensure compact timetable fills the entire page */
  #compact-timetable {
    width: 100% !important;
    max-width: none !important;
    margin: 0 !important;
    padding: 0 !important;
    box-shadow: none !important;
    border: none !important;
  }

  /* Compact table styles for print */
  .print-compact-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 8px;
    line-height: 1.1;
  }

  .print-compact-table th,
  .print-compact-table td {
    border: 1px solid #000;
    padding: 2px;
    text-align: center;
    vertical-align: middle;
    height: 16px;
  }

  .print-compact-table th {
    background-color: #f0f0f0;
    font-weight: bold;
    font-size: 7px;
  }

  .print-compact-table .period-cell {
    background-color: #f8f8f8;
    font-weight: 500;
    font-size: 7px;
  }

  .print-compact-table .subject-cell {
    font-size: 6px;
    line-height: 1.0;
  }

  /* Color coding for print */
  .print-specific { background-color: #e6f2ff !important; }
  .print-general { background-color: #e6ffe6 !important; }
  .print-complementary { background-color: #f0e6ff !important; }

  /* Hide interactive elements when printing */
  button, .no-print {
    display: none !important;
  }

  /* Ensure text is crisp for printing */
  * {
    -webkit-print-color-adjust: exact;
    color-adjust: exact;
  }
}

